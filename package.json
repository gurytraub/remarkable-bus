{
  "name": "remarkable-bus",
  "version": "0.7.9",
  "description": "The Remarkable micro-services framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/novus/remarkable-bus.git"
  },
  "author": "Ariel Laub",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "micro services",
    "bus",
    "amqp",
    "rabbitmq",
    "protobuf",
    "scalable",
    "typescript"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "watch": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-test-proto": "cd test && find . -name '*.proto' -type f -exec rsync -R {} ../dist/test \\; && cd ..",
    "test": "npm run build && npm run copy-test-proto && node ./dist/test/runner.js",
    "prepublishOnly": "npm run build",
    "clean": "rm -R dist"
  },
  "dependencies": {
    "amqplib": "^0.5.2",
    "cuid": "^2.0.2",
    "express": "^4.16.3",
    "protobufjs": "^6.8.6",
    "source-map-support": "^0.5.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.7",
    "@types/chai": "^4.1.2",
    "@types/cuid": "^1.3.0",
    "@types/express": "^4.11.1",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.6.5",
    "@types/protobufjs": "^6.0.0",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "mocha": "^5.0.0",
    "supertest": "^3.1.0",
    "tslint": "^5.8.0",
    "typescript": "^2.7.2"
  }
}
